# Streamlit Cloud Secrets設定テンプレート
# このファイルをコピーして secrets.toml を作成してください
# secrets.toml は .gitignore に含まれているため、Gitにコミットされません

# ==========================================
# 必須設定
# ==========================================

# アプリケーションパスワード（ログイン用）
APP_PASSWORD = "your-secure-password"

# LLM API Keys
OPENAI_API_KEY = "sk-proj-..."
ANTHROPIC_API_KEY = "sk-ant-..."

# 使用するアナライザーの選択（"claude" または "gpt"）
ANALYZER_TYPE = "claude"

# ==========================================
# AWS設定（DynamoDB使用時のみ必須）
# ==========================================

[aws]
region = "ap-northeast-1"
access_key_id = "YOUR_AWS_ACCESS_KEY_ID"
secret_access_key = "YOUR_AWS_SECRET_ACCESS_KEY"

[dynamodb]
table_name = "keiba_cache"

# ==========================================
# オプション設定
# ==========================================

# キャッシュTTL（秒）
CACHE_TTL_SECONDS = "604800"  # 7日間

# Claude設定
CLAUDE_MODEL = "claude-sonnet-4-5-20250929"
CLAUDE_MAX_TOKENS = "8000"
CLAUDE_TEMPERATURE = "0.7"

# GPT-5設定
GPT5_MAX_INPUT_TOKENS = "250000"
GPT5_MAX_OUTPUT_TOKENS = "8000"
GPT5_REASONING_EFFORT = "medium"  # "minimal", "medium", or "high"

# スクレイピング設定
SCRAPING_DELAY_SECONDS = "1"
REQUEST_TIMEOUT = "10"
MAX_RETRIES = "3"
